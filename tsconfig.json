{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": true,
    "outDir": "dist/src/",
    "declaration": true,
    "sourceMap": true,
    // "noEmit": true,
    "strictNullChecks": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
